@model List<AyudandoEnLaPandemia.Models.Necesidad>
@{
    Layout = "~/Views/Shared/MiPlantilla.cshtml";
    ViewBag.Title = "Index";
}

<center class="text-info"><h2>"¿COMO AYUDAR DESDE CASA?"</h2></center>
<h3 class="font-weight-bold">Ingresar:</h3>
<form action="Ingresar" method="post">
    <div class="form-group">
        <label for="nombre">Nombre de usuario:</label>
        <input type="text" name="nombreUsuario" />
    </div>
    <div class="form-group">
        <label for="password">Contraseña:</label>
        <input type="password" name="password" />
    </div>

    <input type="submit" value="Enviar" class="btn btn-dark" />

</form>
<br />
<br />
<div><h3 class="text-danger">@ViewBag.msg</h3></div>
<h3 class="text-info">¿Aun no es usuario?</h3>

<a href="../Usuario/Registrarse">REGISTRARSE</a>
<br>
<br />





@{
    List<AyudandoEnLaPandemia.Models.Necesidad> necesidades = Model;




    Html.RenderPartial("_NecesidadRanking", necesidades);

}

@section miFooter{
    <footer>
        <p>&copy; @DateTime.Now.Year - </p>
    </footer>

}





