
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>"Ayuda online"</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>


    <div class="row navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <div class="navbar-header">
                <div class="col-md-4">
                    @Html.ActionLink("MENU", "Home", "Home", new { area = "" }, new { @class = "navbar-brand, text-primary" })
                </div>
                <div class="col-md-4">
                    @Html.ActionLink("VER NECESIDADES", "listar", "Necesidad", new { area = "" }, new { @class = "navbar-brand, text-primary" })
                </div>
                <div class="col-md-4">
                    @Html.ActionLink("HOME", "Index", "Home", new { area = "" }, new { @class = "navbar-brand, text-primary" })
                </div>
            </div>
        </div>
    </div>




    <div class="container body-content text-success">


        @RenderBody()
    </div>

    @RenderSection("miFooter", required: false)

    @RenderSection("links", required: false)

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

