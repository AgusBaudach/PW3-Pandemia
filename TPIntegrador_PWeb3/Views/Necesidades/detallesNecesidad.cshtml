@model TPIntegrador_PWeb3.DAL.Necesidades

@{
    ViewBag.Title = "detallesNecesidad";
}

<h2>Detalles</h2>

<h3 class="text-danger"><a href="../../Usuario/HomeUsuario">Home</a></h3><br />
<table class="table">
    <tr>
        <th>
            Nombre:
        </th>
        <th>
            Descripcion:
        </th>
        <th>
            FechaCreacion:
        </th>
        <th>
            Fecha de cierre:
        </th>
        <th>
            Telefono de Contacto:
        </th>

        <th>
            Foto:
        </th>
        <th>
            Estado:
        </th>
        <th>
            Valoracion:
        </th>
        <th>
            Creador:
        </th>
        <th></th>
    </tr>


    <tr>
        <td>
            @Model.Nombre
            
        </td>
        <td>
            @Model.Descripcion
        </td>
        <td>
            @Model.FechaCreacion
        </td>
        <td>
            @Model.FechaFin
        </td>
        <td>
            @Model.TelefonoContacto
        </td>

        <td>

            <img height="80" width="80" src="../img/@Model.Foto" />
        </td>
        <td>
            @Model.Estado
        </td>
        <td>
            @if (@Model.NecesidadesValoraciones.Count != 0)
            {

                @Model.NecesidadesValoraciones.Last().Valoracion}
        </td>
        <td>
            @Model.Usuarios.Nombre
        </td>

    </tr>


</table>
<br />

@if (@Model.Usuarios.Password != @TPIntegrador_PWeb3.Helper.SessionHelper.Nombre && @TPIntegrador_PWeb3.Helper.SessionHelper.contador != 1)
{
    <h3>¿Que opina de la necesidad?</h3>


    <form action="../valorar" method="post">

       
        <h4> <input type="checkbox" value="1" name="megusta" />Me gusta</h4>
        <h4> <input type="checkbox" value="0" name="nomegusta" />No me gusta</h4>
   
    <input type="hidden" value="@Model.IdNecesidad" name="idNecesidad" />
    <button type="submit">Valorar</button>
</form>
    <br />
    <a href="../../Usuario/denunciar?idNecesidad=@Model.IdNecesidad"><h3>Denunciar</h3></a>
    <br />
    <a href="../donar?idNecesidad=@Model.IdNecesidad"><h3>Donar</h3></a>
    <br />
}
else if(@Model.Usuarios.Password != @TPIntegrador_PWeb3.Helper.SessionHelper.Nombre && @TPIntegrador_PWeb3.Helper.SessionHelper.contador == 1)

{
    <h3>¿Que opina de la necesidad?</h3>


    <form action="valorar" method="post">

        <input type="checkbox" value="1" name="megusta" /><h4>Me gusta</h4>
        <input type="checkbox" value="0" name="nomegusta" /><h4>No me gusta</h4>
        <input type="hidden" value="@Model.IdNecesidad" name="idNecesidad" />
        <button type="submit">Valorar</button>
    </form>
    <br />
    <a href="../Usuario/denunciar?idNecesidad=@Model.IdNecesidad"><h3>Denunciar</h3></a>
    <br />
    <a href="donar?idNecesidad=@Model.IdNecesidad"><h3>Donar</h3></a>
    <br />

}








